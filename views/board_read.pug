extends layout
block content
	style.
		.dropdown-menu{border:1px solid rgba(0,0,0,.15);}
	.content
		.row
			.col-md-12
				.card
					.card-header
						h4.card-title #{title}
					.card-body
						.row
							label.col-md-1.col-form-label.text-center 제목
							.col-md-5
								.form-group
									input.form-control(type='text', name='title', value=doc.title, readonly)
							label.col-md-1.col-form-label.text-center 작성자
							.col-md-5
								.form-group
									input.form-control(type='text', name='writer', value=doc.writer, readonly)
						.row
							.col-12
								.p-3.border.rounded#content

						.text-center
							a.btn.btn-primary(href='/board/' + doc.boardType) 목록으로

	block append_js
		link(href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote-bs4.css" rel="stylesheet")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote-bs4.js", type='text/javascript')
		script.
			$(document).ready(function(){
				$('#content').html(!{JSON.stringify(doc.content)});
			});

