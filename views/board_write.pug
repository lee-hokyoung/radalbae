extends layout
block content
	style.
		.dropdown-menu{border:1px solid rgba(0,0,0,.15);}
	.content
		.row
			.col-md-12
				.card
					.card-header
						h4.card-title #{title}
					.card-body
						.row
							label.col-md-1.col-form-label 제목
							.col-md-5
								.form-group
									input.form-control(type='text', name='title')
							label.col-md-1.col-form-label 작성자
							.col-md-5
								.form-group
									input.form-control(type='text', name='writer')
						.row
							.col-12
								#summernote
						.text-center
							button.btn.btn-primary(type='button', onclick='fnWrite()') 글쓰기
							input(type='hidden', value=side, name='boardType')


	block append_js
		link(href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote-bs4.css" rel="stylesheet")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote-bs4.js", type='text/javascript')
		script(src='/javascripts/board.js', type='text/javascript')

